{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/todogroup/repolinter/master/rules/file-or-directory-existence-config.json",
  "type": "object",
  "properties": {
    "nocase": {
      "type": "boolean",
      "default": false
    },
    "globsAny": {
      "type": "array",
      "items": { "type": "string" }
    },
    "fail-message": { "type": "string" }
  },
  "oneOf": [
    { "required": ["globsAny"] }
  ]
}
